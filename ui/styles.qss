QWidget {
    background: rgba(30, 30, 40, 0.7);
    border-radius: 20px;
    border: 2px solid #00ffe7;
    color: #e0f7fa;
    font-family: 'Fira Mono', 'Consolas', monospace;
}
QLineEdit {
    background: rgba(20, 20, 30, 0.5);
    border: 1px solid #00ffe7;
    border-radius: 10px;
    color: #00ffe7;
    padding: 8px;
    font-size: 16px;
}
QLabel {
    color: #00ffe7;
    font-size: 18px;
    font-weight: bold;
} 